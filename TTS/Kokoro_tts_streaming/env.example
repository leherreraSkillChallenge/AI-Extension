# Variables de entorno para el servicio TTS Proxy
# Copia este archivo a .env para personalizar la configuración

# Configuración del servidor Kokoro TTS
KOKORO_HOST=host.docker.internal
KOKORO_PORT=8880

# Configuración del servidor Flask
FLASK_ENV=production
FLASK_DEBUG=false

# Configuración de la aplicación
DEFAULT_VOICE=af_bella
DEFAULT_SPEED=1.0
DEFAULT_FORMAT=mp3

# Puerto del servicio (interno del contenedor)
PORT=5100
